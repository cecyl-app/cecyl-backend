{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2022",
        "rootDir": "src",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "incremental": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictNullChecks": true
    }
}
{
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "compilerOptions": {
        "noEmit": true,
        "target": "es2022",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "incremental": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}